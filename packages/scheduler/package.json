{
  "name": "@ownyou/scheduler",
  "version": "0.1.0",
  "description": "Agent scheduling for OwnYou - runs agents on schedule or on-demand",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@ownyou/agents-base": "workspace:*",
    "@ownyou/agents-shopping": "workspace:*",
    "@ownyou/shared-types": "workspace:*",
    "@ownyou/memory-store": "workspace:*",
    "@ownyou/llm-client": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  }
}
