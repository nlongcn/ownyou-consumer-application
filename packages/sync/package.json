{
  "name": "@ownyou/sync",
  "version": "0.1.0",
  "description": "Cross-device sync infrastructure using OrbitDB v3 + Helia with E2EE",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.0",
    "@ownyou/observability": "workspace:*",
    "@ownyou/shared-types": "workspace:*"
  },
  "peerDependencies": {
    "@orbitdb/core": "^2.0.0",
    "@orbitdb/simple-encryption": "^0.0.2",
    "helia": "^4.0.0",
    "libp2p": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "ownyou",
    "sync",
    "orbitdb",
    "helia",
    "ipfs",
    "p2p",
    "crdt",
    "e2ee"
  ],
  "license": "MIT"
}
